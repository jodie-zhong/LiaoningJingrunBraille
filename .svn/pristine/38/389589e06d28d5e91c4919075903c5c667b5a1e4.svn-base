@import "font/EUDC/fonts.css";

@page {
  size: A4;
  margin: 0;
}

body.document-editor {
  width: 16.5cm;
  min-height: 21cm;
  padding: 2cm 1.5cm 1.5cm;
  margin: 0.5cm auto;
  border: 1px #D3D3D3 solid;
  background: white;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  font-family: EUDC;
}

body.document-editor, body.document-editor td, body.document-editor th {
  font-size: 20px;
}

body.document-editor table {
  margin-top: 0.5cm;
  margin-bottom: 0.5cm;
}

body.document-editor h1 {
  margin-bottom: 1cm;
}

body.document-editor img {
  display: block;
  max-width: 100%;
  margin: 0.5cm auto;
}

body.document-editor p {
  margin: 0;
}