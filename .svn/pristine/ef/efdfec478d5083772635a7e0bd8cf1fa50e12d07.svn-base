<div class="modal-dialog dialog-container">
  <div class="modal-content">
    <div class="panel">
      <div class="panel-header">
        <h3><i class="fa fa-user-o"></i> 出版计划新增</h3>
        <div class="control-btn">
          <a class="panel-close btn-close"><i class="fa fa-close"></i></a>
        </div>
      </div>
      <div class="panel-content">
        <div class="form-horizontal" id="formPersonEdit">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <label class="col-xs-2 control-label">添加类别</label>
                <div class="col-xs-4">
                	<label class="radio-inline">
                		<input type="radio" name="bookAndTopicType" value="2" checked />选题
                	</label>
                	<label class="radio-inline">
                		<input type="radio" name="bookAndTopicType" value="1" />图书
                	</label>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
          	<div class="col-xs-12">
          		<div class="form-group table-10">
          			<table class="table table-striped table-hover table-nowrap" id="searchPublishTable">
          				<thead>
          					<tr>
          						<th width="50px">序号</th>
          						<th width="60px" data-type = "check"><i class="fa fa-square-o" data-action="check"></i></th>
          						<th>图书名称</th>
          						<th>类别</th>
          					</tr>
          				</thead>
          				<tbody id="publishChooseList"></tbody>
          			</table>
          		</div>
          		<div id="publishChoosePaging" class="clearfix"></div>
          	</div>
          </div>
          <div class="dialog-options">
            <button class="btn btn-primary" id="btnPublishSave">保存</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>