html, body {
    font-family: "microsoft yahei", "微软雅黑", "simsun", "宋体";
    height: 100%;
    position: relative;
    overflow-y: auto;
}

body::-webkit-scrollbar {
    width: 0;
    height: 0;
}

.relative-container-body::-webkit-scrollbar-track-piece {
    background-color: #fff;
    border-radius: 0;
}

.relative-container-body::-webkit-scrollbar-thumb:vertical {
    height: 0;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 0;
}

.relative-container-body::-webkit-scrollbar-thumb:horizontal {
    width: 0;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 0;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
    font-family: "microsoft yahei", "微软雅黑", "simsun", "宋体";
}

.col-lg-1, .col-lg-10, .col-lg-11, .col-lg-12, .col-lg-2, .col-lg-3, .col-lg-4, .col-lg-5, .col-lg-6, .col-lg-7, .col-lg-8, .col-lg-9, .col-md-1, .col-md-10, .col-md-11, .col-md-12, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, .col-sm-1, .col-sm-10, .col-sm-11, .col-sm-12, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-xs-1, .col-xs-10, .col-xs-11, .col-xs-12, .col-xs-2, .col-xs-3, .col-xs-4, .col-xs-5, .col-xs-6, .col-xs-7, .col-xs-8, .col-xs-9 {
    padding-left: 5px;
    padding-right: 5px;
}

.form-horizontal .form-group {
    position: relative;
}

.editor-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    padding-bottom: 50px;
    box-sizing: border-box;
}

.editor-container-inner {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 500px;
    overflow-x: hidden;
    overflow-y: auto;
}

.editor-container-inner::-webkit-scrollbar {
    width: 0;
    height: 0;
}

.editor-left {
    width: 250px;
    flex: 0 0 auto;
    /*top: 53px;*/
    /*left: 3px;*/
    /*bottom: 3px;*/
    background-color: #fff;
    z-index: 9;
}

.editor-right {
    /*position: fixed;*/
    width: 400px;
    flex: 0 0 auto;
    /*top: 53px;*/
    /*right: 3px;*/
    /*bottom: 3px;*/
    background-color: #fff;
    z-index: 9;
}

/* 组件列表 */
.ui-accordion .ui-accordion-content {
    padding: 5px;
    border-radius: 0;
}

.ui-accordion .ui-accordion-header {
    border-radius: 0;
    margin: 0;
}

.ui-accordion .ui-accordion-header.ui-state-active {
    background-color: #319DB5;
    border-color: #357CA5;
}

#widgetContainer {
    height: 100%;
}

#widgetContainer ul {
    margin: 0;
    padding: 0;
}

#widgetContainer ul li {
    float: left;
    margin: 0;
    padding: 0;
    list-style: none;
}

.widget-item {
    width: 80px;
    margin: 10px;
    cursor: pointer;
}

.widget-item .widget-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto;
    display: block;
}

.widget-item .widget-title {
    margin: 0;
    font-size: 12px;
    line-height: 20px;
    color: #666;
    text-align: center;
}

.widget-drag-preview {
    z-index: 100;
}

