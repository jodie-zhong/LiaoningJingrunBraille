#propertyContainer {
    position: absolute;
    background-color: #fff;
    border: 1px solid #ddd;
    top: 0;
    bottom: 0;
    right: 0;
    width: 100%;
}

.container-header {
    background-color: #319DB5;
    border: 1px solid #357CA5;
    line-height: 30px;
    font-size: 14px;
    color: #fff;
    text-align: center;
}

.absolute-container-header {
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 9;
}

.relative-container {
    position: relative;
    height: 100%;
}

.relative-container-body {
    padding-top: 32px;
    overflow-y: auto;
    height: 100%;
    box-sizing: border-box;
}

.relative-container-body::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}

.relative-container-body::-webkit-scrollbar-track-piece {
    background-color: #fff;
    border-radius: 5px;
}

.relative-container-body::-webkit-scrollbar-thumb:vertical {
    height: 5px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
}

.relative-container-body::-webkit-scrollbar-thumb:horizontal {
    width: 5px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
}

/* 编辑区 */
#editorPanelContainer {
    position: relative;
    width: 375px;
    height: 500px;
    margin: 20px auto;
    background-color: #fff;
    box-shadow: 2px 2px 2px 2px #ddd;
    box-sizing: border-box;
    /*overflow-y: auto;*/
}


#editorPanelContainer::-webkit-scrollbar, #editorPanelInner::-webkit-scrollbar {
    width: 0;
    height: 0;
}

.editor-tools-container {
    position: fixed;
    width: 0;
    height: 400px;
    top: 70px;
    left: 50%;
    transform: translate(-187px, 0);
    -webkit-transform: translate(-187px, 0);
    box-sizing: border-box;
    z-index: 100;
}

#editorPanelInner {
    position: relative;
    width: 375px;
    height: 500px;
    overflow-x: hidden;
    overflow-y: scroll;
    box-sizing: border-box;
}

#editorPanel {
    position: relative;
    width: 375px;
    min-height: 100%;
    background-color: #fff;
    cursor: default;
}

.drop-placeholder {
    height: 50px;
    border: 1px dashed #aaa;
    background-color: #efefef;
}

#widgetSelectMask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1px dashed #357CA5;
    display: none;
    z-index: 99;
    box-sizing: border-box;
    /*pointer-events:none;*/
}

#widgetSelectMask div {
    position: relative;
    width: 100%;
    height: 100%;
}

#widgetSelectMask .dot {
    position: absolute;
    width: 5px;
    height: 5px;
    border: 1px solid #357CA5;
    background-color: #fff;
}

#dotTopLeft {
    top: -3px;
    left: -3px;
    cursor: nw-resize;
}

#widgetSelectMask.freeze #dotTopLeft, #widgetSelectMask.relative #dotTopLeft {
    cursor: not-allowed;
}

#dotTop {
    top: -3px;
    left: 50%;
    margin-left: -3px;
    cursor: n-resize;
}

#widgetSelectMask.freeze #dotTop, #widgetSelectMask.relative #dotTop {
    cursor: not-allowed;
}

#dotTopRight {
    top: -3px;
    right: -3px;
    cursor: ne-resize;
}

#widgetSelectMask.freeze #dotTopRight, #widgetSelectMask.relative #dotTopRight {
    cursor: not-allowed;
}

#dotRight {
    top: 50%;
    margin-top: -3px;
    right: -3px;
    cursor: e-resize;
}

#widgetSelectMask.freeze #dotRight {
    cursor: not-allowed;
}

#dotBottomRight {
    bottom: -3px;
    right: -3px;
    cursor: nw-resize;
}

#widgetSelectMask.freeze #dotBottomRight {
    cursor: not-allowed;
}

#dotBottom {
    bottom: -3px;
    left: 50%;
    margin-left: -3px;
    cursor: n-resize;
}

#widgetSelectMask.freeze #dotBottom {
    cursor: not-allowed;
}

#dotBottomLeft {
    bottom: -3px;
    left: -3px;
    cursor: ne-resize;
}

#widgetSelectMask.freeze #dotBottomLeft, #widgetSelectMask.relative #dotBottomLeft {
    cursor: not-allowed;
}

#dotLeft {
    top: 50%;
    margin-top: -3px;
    left: -3px;
    cursor: e-resize;
}

#widgetSelectMask.freeze #dotLeft, #widgetSelectMask.relative #dotLeft {
    cursor: not-allowed;
}

.widget-container {
    position: relative;
    -webkit-user-select: none;
    user-select: none;
}

#widgetMaskClose {
    position: absolute;
    right: 0;
    top: 0;
    color: #357CA5;
    font-size: 12px;
    display: inline-block;
    width: 18px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    cursor: pointer;
}

.subline-x {
    /* 因为内容超长会向下滚，所以subline需要fixed，但是横向如果fixed就无法相对编辑区了，所以只有纵向的fixed */
    position: fixed;
    width: 3px;
    height: 100%;
    border-left: 1px dashed rgba(53, 124, 165, 0.5);
    left: 335px;
    top: 0;
    cursor: w-resize;
}

.subline-y {
    position: absolute;
    width: 100%;
    height: 3px;
    border-top: 1px dashed rgba(53, 124, 165, 0.5);
    left: 0;
    top: 20px;
    cursor: s-resize;
}

/* 富文本属性 */
.richText-editor-container {
    height: 150px;
}

/* 工具条 */
.editor-left-tools {
    width: 50px;
    position: absolute;
    left: -50px;
    top: 0;
}

.editor-bottom-tools {
    width: 50px;
    position: absolute;
    left: -50px;
    bottom: 0;
}

.vbtn {
    width: 42px !important;
}
