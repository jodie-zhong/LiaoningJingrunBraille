<!-- 角色管理 -->
<div class="row">
  <div class="col-xs-6">
    <!-- 左侧列表 -->
    <div class="panel">
      <div class="panel-header custom-panel-header">
        <h3><i class="fa fa-cogs"></i>系统管理 - 角色列表</h3>
        <div class="control-btn">
          <button class="btn btn-xs btn-success" id="btnRoleAdd">新增</button>
          <button class="btn btn-xs btn-blue" id="btnRoleModify" disabled>修改</button>
          <button class="btn btn-xs btn-danger" id="btnRoleDelete" disabled>删除</button>
        </div>
      </div>
      <div class="panel-content">
        <div class="table-10">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>序号</th>
              <th>角色名称</th>
              <th>角色描述</th>
            </tr>
            </thead>
            <tbody id="roleListTable">

            </tbody>
          </table>
        </div>
        <div id="roleManagePaging" class="pagination-container">
        </div>
      </div>
    </div>
  </div>
  <!-- 角色详情 -->
  <div class="col-xs-6">
    <div class="panel">
      <div class="panel-header custom-panel-header">
        <h3>权限设置</h3>
        <div class="control-btn">
          <button class="btn btn-xs btn-primary" id="btnAuthSave" disabled>保存权限</button>
        </div>
      </div>
      <div class="panel-body" style="height: 544px; overflow-y: auto;">
        <p class="empty-tips">请选择角色后查看角色权限。</p>
        <div id="authTree" class="ztree">
        </div>
      </div>
    </div>
  </div>
</div>